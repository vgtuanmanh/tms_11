<tr>
  <th>
    <%= link_to course.name, admin_course_path(course) %> &nbsp;
  </th>
  <th>
    <%= course.description %> &nbsp;
  </th>
  <th>
    <%= link_to_if(current_user.admin?, "Show Details",  admin_course_path(course),
    class: 'btn btn-primary') %>
  </th>
  <th>
    <%= link_to_if(current_user.admin?, "Edit",  edit_admin_course_path(course),
    class: 'btn btn-primary') %>
  </th>
  <th>
    <%= link_to_if(current_user.admin?, "Show Members",
    admin_course_assignments_path(course), class: "btn btn-primary") %> &nbsp;
  </th>
  <th>
    <%= link_to_if(current_user.admin?, "Delete", 
                                    admin_course_path(course), 
                                    class: "btn btn-primary", 
                                    method: :delete, 
                                    data: {confirm: "You sure?"}) %>
  </th>
</tr>